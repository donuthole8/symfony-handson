        <a href="{{ path('micro_post_detail', { microPost: microPost.id }) }}">
            {{ microPost.title }}
        </a>
    </div>
    <div class="text-base dark:text-gray-400">
        {{ microPost.text }}
    </div>
    <div class="text-xs text-gray-500 dark:text-gray-400">
        {{ microPost.created | date("M j, Y") }}
    </div>
    <div>
        <a href="#" class="flex flex-row">
            <svg class="w-4 rounded-full bg-red-600 text-white dark:bg-red-500 m-1" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" className="w-6 h-6">
